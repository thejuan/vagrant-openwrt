# -*- ruby -*-

require "rubygems"
require "hoe"

require_relative('lib/openwrt/version')
# Hoe.plugin :compiler
# Hoe.plugin :gem_prelude_sucks
# Hoe.plugin :inline
# Hoe.plugin :racc
# Hoe.plugin :rcov
# Hoe.plugin :rubyforge

Hoe.spec "vagrant-guest-openwrt" do |prj|
  developer("Adam Mills", "sales@chambills.com")
  license "MIT"
  prj.version = VagrantOpenWrt::Version::STRING
  prj.summary='A vagrant plugin for OpenWrt guests' 
  prj.urls=["http://github.com/thejuan/vagrant-openwrt"]
  prj.extra_deps=[]
  prj.extra_dev_deps=[]
end
